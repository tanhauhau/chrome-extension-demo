{
  "manifest_version": 2,
  "name": "My Chrome Extension ðŸ˜Ž",
  "description": "My Chrome Extension ðŸ˜Ž",
  "version": "1.0.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "img_16.png",
    "32": "img_32.png",
    "64": "img_64.png"
  },
  "browser_action": {
    "default_title": "My Chrome Extension ðŸ˜Ž",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img_16.png",
      "32": "img_32.png",
      "64": "img_64.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [],
  "permissions": ["activeTab", "tabCapture"]
}
